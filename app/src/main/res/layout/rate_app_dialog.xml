<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_below="@id/header_text"-->
<!--        android:layout_marginLeft="20dp"-->
<!--        android:layout_marginRight="20dp"-->
<!--        android:layout_marginTop="20dp"-->
<!--        android:gravity="center_vertical"-->
<!--        android:orientation="horizontal">-->

        <TextView
            android:id="@+id/learning_content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:text="Learning Content :"
            android:textColor="@color/textColor"
            android:textSize="14sp" />

    <RatingBar
        android:id="@+id/ratingBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/learning_content_text"
        android:layout_marginLeft="20dp"
        android:isIndicator="false"
        android:rating="0"
        android:stepSize="1" />

    <TextView
        android:id="@+id/app_usability_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:text="Mobile App Usability :"
        android:textColor="@color/textColor"
        android:textSize="12sp" />

    <RatingBar
        android:id="@+id/ratingBar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="false"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/learning_content_text"
        android:rating="0"
        android:stepSize="1" />

<!--        <LinearLayout-->
<!--            android:id="@+id/container"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_below="@id/header_text"-->
<!--            android:layout_marginLeft="5dp"-->
<!--            android:layout_marginTop="5dp"-->
<!--            android:gravity="center_vertical"-->
<!--            android:orientation="horizontal">-->
    <TextView
        android:id="@+id/like_radio_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Is App Useful for your learning :"
        android:textColor="@color/textColor"
        android:textSize="12sp" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_below="@id/like_radio_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/yes_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YES" />

        <RadioButton
            android:id="@+id/no_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NO" />

    </RadioGroup>
<!--        </LinearLayout>-->

    <EditText
        android:id="@+id/comment_text"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/border_box"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="top|left"
        android:hint="Your Feedback...."
        android:textSize="12sp"
        />
<!--    </LinearLayout>-->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/outlinedTextField"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:paddingTop="@dimen/dialog_bar_linear_padding_top"
        android:paddingBottom="@dimen/dialog_bar_linear_padding_bottom">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/txtNegativeButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:lines="1"
            android:text="Cancel"
            android:textColor="@color/black33" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/txtPositiveButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:text="Submit"
            android:textColor="@color/black33" />

<!--        android:paddingLeft="2dp"-->
<!--        android:paddingTop="5dp"-->
<!--        android:paddingRight="2dp"-->
<!--        android:paddingBottom="5dp"-->

    </LinearLayout>

</LinearLayout>